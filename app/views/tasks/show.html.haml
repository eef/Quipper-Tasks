%p#notice= notice

%p
  %b Title:
  = @task.title
%p
  %b Description:
  = @task.description
%p
  %b Deadline:
  = @task.deadline.to_s(:date_time_ordinal_long)
%p
  %b Complete:
  = task_status(@task.complete)
%p
  %b Email:
  = @task.email
- if @task.attachment?
  %p
    = link_to "File Attachment", @task.attachment.url

= link_to 'Edit', edit_task_path(@task)
\|
= link_to 'Back', tasks_path
