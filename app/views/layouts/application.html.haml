!!!
%html
%head
  %title
    QuipperTasks
  = stylesheet_link_tag    "application", :media => "all"
  = javascript_include_tag "application"
  = csrf_meta_tags
%body
  #wrapper
    #header
      #logo
        %h1
          %a{:href => "#"}
            QuipperTasks
        %span.slogan
          Task manager
    #page
      #sidebar
        %ul.list
          %li.first
            %a{:href => "#"}
              = link_to "All Tasks", tasks_path
          %li
            %a{:href => "#"}
              = link_to 'New Task', new_task_path
      #content
        = yield
