source 'https://rubygems.org'

gem 'rails', '3.2.3'
gem 'mysql2'
gem 'haml-rails'
gem 'jquery-rails'
gem 'sorted', '~> 0.4.2'
gem "will_paginate"
gem "paperclip", "~> 3.0"

# Gems user for test and development
# Not required in production
group :test, :development do
  gem 'awesome_print'
  gem "rspec-rails", "~> 2.6"
  gem "faker"
  gem "factory_girl_rails"
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

